<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pelican>

<configuration version="1.0">
    <pipeline>

        <clients>
            <PelicanServerClient>
                <!-- Receive data from the server on the following address --> 
                <server host="127.0.0.1" port="2000" />
                <!--  Receive StreamData chunks using the StreamDataAdpater -->
                <data type="StreamData" adapter="StreamDataAdapter"/>
            </PelicanServerClient>
        </clients>

        <adapters>
            <!-- The StreamDataAdapter takes no XML configuration -->
            <StreamDataAdapter/>
        </adapters>

    </pipeline>
</configuration>
